@model IEnumerable<Bloginary.Models.Tag>
@{
    ViewData["Title"] = "Tag Page";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Tag List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-action="create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i>&nbsp;  Create New Tag
            </a>
        </div>
    </div>

    <br /><br />
    <div class="row">

        <table class="table table-secondary table-bordered table-striped table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td class="w-50">@obj.TagName</td>
                        <td>
                            <div class="btn-group mx-0" role="group">

                                <a asp-action="Edit" asp-route-id="@obj.TagId" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>&nbsp;  Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@obj.TagId" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i>&nbsp;  Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
